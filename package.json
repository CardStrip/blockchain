{
  "name": "@cardstrip/ioi",
  "version": "0.0.1",
  "description": "Contains the CardStrip blockchain",
  "main": "dist/index.js",
  "scripts": {
    "test:watch": "jest --watchAll",
    "test": "jest",
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "start:2": "set HTTP_PORT=3002 && set P2P_PORT=5002 && set PEERS=ws://localhost:5001 && npm start",
    "start:3": "set HTTP_PORT=3003 && set P2P_PORT=5003 && set PEERS=ws://localhost:5001,ws://localhost:5002 && npm start",
    "start:watch": "nodemon -e ts -w ./src -x npm start",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CardStrip/ioi.git"
  },
  "keywords": [
    "CardStrip",
    "Module",
    "Blockchain",
    "Cryptocurrency"
  ],
  "author": "Wendell Muntslag van Amzink <wendell@cardstrip.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CardStrip/ioi/issues"
  },
  "homepage": "https://github.com/CardStrip/ioi#readme",
  "devDependencies": {
    "@types/crypto-js": "^3.1.39",
    "@types/express": "^4.0.39",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.3.0",
    "@types/supertest": "^2.0.4",
    "@types/ws": "^5.1.0",
    "jest": "^21.2.1",
    "nodemon": "^1.17.3",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0-rc.2",
    "@nestjs/core": "^5.0.0-rc.2",
    "@nestjs/microservices": "^5.0.0-rc.2",
    "@nestjs/testing": "^5.0.0-rc.2",
    "@nestjs/websockets": "^5.0.0-rc.2",
    "crypto-js": "^3.1.9-1",
    "elliptic": "^6.4.0",
    "jest-cli": "^22.4.3",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.1.0",
    "typescript": "^2.6.2",
    "uuid": "^3.2.1"
  }
}
